<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fetch Student Information</title>
    <!-- <link rel="stylesheet" href="/frontend/public/style1.css"> -->
    <style>        body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Ensure content is centered vertically */
    }

    .container {
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 400px; /* Set maximum width for the container */
        width: 100%; /* Ensure container fills available space */
    }

    h1 {
        text-align: center;
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    input[type="int"] {
        width: calc(100% - 22px); /* Adjust input width to fit container padding */
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    a.a {
        display: block;
        padding: 10px 20px;
        font-size: 16px;
        text-align: center;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        cursor: pointer;
        border: none; /* Remove default button border */
    }

    a.a:hover {
        background-color: #0056b3;
    }

    #student_info {
        margin-top: 20px;
    }

    #student_info p {
        margin: 5px 0;
    }
    .con {
        height: 550px;
        width: 550px;
    }
</style>
    
</head>
<body>
    <div class="con">
        <h1>Fetch Student Information</h1>
        <label for="student_id">Enter Student ID:</label>
        <input type="int" id="student_id" name="Student_ID" onchange="updateLink()" > <!-- Corrected ID attribute -->
        <a href="#"  class="button" id="fetch_link"> Fetch </a>
    </div>

    <div id="student_info">
        <div class="student-details">
            <h2>Student Details:</h2>
            <div class="receipt">
                <div class="receipt-item">
                    <span class="item-label">Student ID:</span>
                    <span class="item-value">{student.Student_ID}</span>
                </div>
                <div class="receipt-item">
                    <span class="item-label">Date of Birth:</span>
                    <span class="item-value">{student.DOB}</span>
                </div>
                <div class="receipt-item">
                    <span class="item-label">SSL/CBSE/ICSE Reg Number:</span>
                    <span class="item-value">{student.SSLC_CBSE_ICSE_Reg_Number}</span>
                </div>
                <!-- Continue adding similar div elements for other student details -->
                
                    <div class="receipt">
                        <div class="receipt-item">
                            <span class="item-label">Caste Certificate Number:</span>
                            <span class="item-value">{student.Caste_Certificate_Number}</span>
                        </div>
                        <div class="receipt-item">
                            <span class="item-label">Income Certificate Number:</span>
                            <span class="item-value">{student.Income_Certificate_Number}</span>
                        </div>
                        <div class="receipt-item">
                            <span class="item-label">Name as in Caste Certificate:</span>
                            <span class="item-value">{student.Name_as_in_Caste_Certificate}</span>
                        </div>
                        <div class="receipt-item">
                            <span class="item-label">Gender:</span>
                            <span class="item-value">{student.Gender}</span>
                        </div>
                        <div class="receipt-item">
                            <span class="item-label">Email:</span>
                            <span class="item-value">{student.Email}</span>
                        </div>
                        <div class="receipt-item">
                            <span class="item-label">Domicile of Karnataka:</span>
                            <span class="item-value">{student.Domicile_of_Karnataka}</span>
                        </div>
                        <div class="receipt-item">
                            <span class="item-label">Counselling Seat Type:</span>
                            <span class="item-value">{student.Counselling_Seat_Type}</span>
                        </div>
                        <div class="receipt-item">
                            <span class="item-label">State Scholarship Portal:</span>
                            <span class="item-value">{student.State_Scholarship_Portal}</span>
                        </div>
                        <!-- Continue adding similar div elements for other student details -->
                    </div>
                </div>
                
            </div>
        </div>
        
    </div>

    <script>

        function updateLink() {
            const studentId = document.getElementById('student_id').value;
            const link = document.getElementById('fetch_link');
            link.href = `/student/${studentId}`;
        }

        // async function fetchStudent() {
        //     const studentId = document.getElementById('student_id').value;
        //     try {
        //         const response = await fetch(`http://localhost:3000/student/${studentId}`);
        //         if (!response.ok) {
        //             throw new Error('Network response was not ok');
        //         }
        //         const data = await response.json();
        //         displayStudentInfo(data);
        //     } catch (error) {
        //         console.error('Error fetching student:', error);
        //         displayStudentInfo(null); // Display an error message
        //     }
        // }

        function displayStudentInfo(student) {
            const studentInfoDiv = document.getElementById('student_info');
            studentInfoDiv.innerHTML = ''; // Clear previous content
    
            if (student) {
                const keys = Object.keys(student);
                keys.forEach(key => {
                    const p = document.createElement('p');
                    p.textContent = `${key}: ${student[key]}`;
                    studentInfoDiv.appendChild(p);
                });
            } else {
                studentInfoDiv.textContent = 'Student information not found';
            }
        }

    
            

    </script>
    
</body>
</html>
